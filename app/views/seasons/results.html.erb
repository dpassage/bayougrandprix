<h1>Bayou Grand Prix <%= @season.name %> Results</h1>
<p id="notice"><%= notice %></p>

<%= render(:partial => "teamlist", :object => @season) %>

<h2>Race Winners</h2>
<table>
  <tr>
    <th>Date</th>
    <th>Track</th>
    <th>Country</th>
    <% for i in 1..10 do %>
      <th><%= ordinal(i) %></th>
    <% end %>
  </tr>
  <% @season.races.order("date").each do |race| %>
    <tr>
      <td><%= race.date %></td>
      <td><%= race.track.name %></td>
      <td><%= race.track.country %></td>
      <% race.race_entries.order("finish").each do |entry| %>
        <td bgcolor="<%= entry.team.color %>">
          <%= entry.driver.name %> 
          <% if entry.dnf %>
            <%= "(DNF)" %> 
          <% end %></td>
      <% end %>
    </tr>
  <% end %>
  
</table>
