<h1><%= @season.name %> Races</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Date</th>
    <th>Track</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @races.each do |race| %>
  <tr>
    <td><%= race.date.to_formatted_s(:rfc822) %></td>
    <td><%= race.track.name %></td>
    <td><%= link_to 'Show', season_race_path(@season, race) %></td>
    <td><%= link_to 'Edit', edit_season_race_path(@season, race) %></td>
    <td><%= link_to 'Remove', season_race_path(@season, race), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Race', new_season_race_path(@season) %>
<%= link_to 'Back to Season', season_path(@season) %>
